{
    "name": "InMeal.Api",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/InMeal.Api",
    "targets": {
        "build": {
            "executor": "@nx-dotnet/core:build",
            "outputs": [
                "{workspaceRoot}/dist/apps/InMeal.Api",
                "{workspaceRoot}/dist/intermediates/apps/InMeal.Api"
            ],
            "dependsOn": [
                {
                    "dependencies": true,
                    "target": "build"
                }
            ],
            "options": {
                "configuration": "Debug",
                "noDependencies": true
            },
            "configurations": {
                "production": {
                    "configuration": "Release"
                }
            }
        },
        "serve": {
            "executor": "@nx-dotnet/core:serve",
            "options": {
                "configuration": "Debug"
            }
        },
        "lint": {
            "executor": "@nx-dotnet/core:format"
        },
        "trust-certs": {
            "executor": "nx:run-commands",
            "options": {
                "command": "dotnet dev-certs https --trust"
            }
        },
        "docker-build": {
            "command": "docker build -f apps/InMeal.Api/Dockerfile . -t inmeal-backend"
        }
    },
    "tags": []
}
